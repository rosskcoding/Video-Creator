# Copy this file to .env and fill in your values
#
# For production: set ENV=prod and the validator will enforce secure settings.

# Environment (dev | prod)
# In prod: DEBUG must be false, ADMIN_PASSWORD & SECRET_KEY must be changed, CORS no localhost.
ENV=dev

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/presenter

# Redis
REDIS_URL=redis://localhost:6379/0

# APIs
OPENAI_API_KEY=sk-...
ELEVENLABS_API_KEY=...

# Storage
# If not set, defaults to /data/projects (if exists) or <repo>/data/projects (local dev).
DATA_DIR=/data/projects

# Auth
# In prod, these MUST be changed from defaults!
ADMIN_PASSWORD=admin
SECRET_KEY=change-me-in-production-very-secret-key

# TTS defaults
DEFAULT_VOICE_ID=1SM7GgM6IMuvQlz2BwM3
DEFAULT_TTS_MODEL=eleven_flash_v2_5

# Translation
TRANSLATION_MODEL=gpt-4o

# CORS (comma-separated origins)
# In prod, do not include localhost!
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Debug mode (must be false when ENV=prod)
DEBUG=false

# HTTP client timeouts (seconds)
TTS_HTTP_TIMEOUT_SEC=60
TRANSLATE_HTTP_TIMEOUT_SEC=120

